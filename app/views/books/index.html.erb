  <h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "show",book_path(book) %></td>
          <td><%= link_to "edit",edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>


<h2>New book</h2>


<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
      <div class="errors"><strong><%= @book.errors.count %> errors prohibited this book from being saved:</strong>
      </div>
      <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
 
  <div class="field">Title<br>
  <%= f.text_field :title %> <br>
  </div>
  <div class="field">Body
  </div>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
 
<% end %>

 





